.message{ data: { id: message.id, group_id: message.group_id } }
  .upper-info
    %p.upper-info__user 
      = message.user.name
    %p.upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  - if message.text.present?
    %p.message__text
      = message.text
  = image_tag message.image.url if message.image.present?
